---
import Signature from "@/assets/signature.svg";
---

<section
  class="relative min-h-dvh flex items-center justify-center overflow-hidden"
>
  <div
    class="relative z-10 flex flex-col justify-center items-center min-h-screen px-6 text-center w-full"
  >
    <div class="max-w-4xl">
      <!-- Main Quote -->
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-light text-smoke mb-12 leading-tight"
      >
        "Art is the language of the unconscious,
        <br class="hidden sm:block" />
        speaking truths we dare not voice."
      </h2>

      <!-- Signature with Decorative Lines -->
      <div class="flex items-center justify-center gap-6 sm:gap-8 mb-16">
        <div
          class="w-16 sm:w-24 h-px bg-gradient-to-r from-transparent to-smoke/60"
        >
        </div>
        <Signature class="w-24 sm:w-32 h-auto text-smoke flex-shrink-0" />
        <div
          class="w-16 sm:w-24 h-px bg-gradient-to-l from-transparent to-smoke/60"
        >
        </div>
      </div>
    </div>
  </div>
</section>
