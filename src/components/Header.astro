---
import Logo from "@/assets/logo.svg";
import Menu from "@/assets/icons/menu.svg";
---

<header class="fixed top-0 z-50 w-full" x-data="{ isOpen: false }">
  <nav class="flex items-center justify-between p-4 z-50 relative">
    <a href="/" name="Sirikanya Amarananthakij">
      <Logo class="h-8 w-auto" />
    </a>
    <button class="cursor-pointer" x-on:click="isOpen = !isOpen">
      <Menu class="text-smoke h-8 w-8" />
    </button>
  </nav>
  <div
    class="fixed w-screen h-screen top-0 right-0 bg-gradient-to-b from-black to-midnight z-40 transition-transform duration-500 ease-in-out pointer-events-none"
    x-bind:class="isOpen ? 'translate-y-0' : '-translate-y-full'"
    x-cloak
  >
    <div class="flex flex-col items-center justify-center h-full">
      <ul class="space-y-4 text-smoke text-lg">
        <li><a href="#home" class="hover:text-white">Home</a></li>
        <li><a href="#gallery" class="hover:text-white">Gallery</a></li>
        <li><a href="#about" class="hover:text-white">About</a></li>
        <li><a href="#contact" class="hover:text-white">Contact</a></li>
      </ul>
    </div>
  </div>
</header>
